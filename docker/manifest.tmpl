image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux
      variant: v7
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}windows-2004-amd64
    platform:
      architecture: amd64
      os: windows
      version: 2004
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}windows-1909-amd64
    platform:
      architecture: amd64
      os: windows
      version: 1909
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}windows-1903-amd64
    platform:
      architecture: amd64
      os: windows
      version: 1903
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}windows-1809-amd64
    platform:
      architecture: amd64
      os: windows
      version: 1809
  - image: plugins/base:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}windows-ltsc2022-amd64
    platform:
      architecture: amd64
      os: windows
      version: ltsc2022